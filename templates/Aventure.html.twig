    <article class="rp">
        {{item.contenu | raw}}
    </article>
    <div class='clear'></div>
    {% if item.repondre %}
     
    <aside>
      <form action="Redaction.php" method="post">
        <input type="hidden" name="numero_H" value="{{numero_H}}">
        <input type="submit" name="repondre"  value="RÃ©pondre">
      </form>
      </aside>
    {% endif %}
    {% if item.modifier %}
        
    <aside>
      <form action="Redaction.php" method="post">
        <input type="hidden" name="numero_H" value="{{numero_H}}">
        <input type="submit" name="modifier" value="Modifier">
        <input type="submit" name="supprimer" value="Supprimer">
      </form>
      </aside>

    {% endif %}
    
    <div class='clear'></div>        

{% endfor %}
    </section>

{% endblock %}

{% block script %}
    <script src="../../script/select-monde.js" ></script>
